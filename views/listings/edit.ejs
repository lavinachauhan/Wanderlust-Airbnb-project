<%- layout("layouts/boilerplate")%>
<body>
        <div class="row mt-3">
            <div class="col offset-2">
                <h1>Edit the listing</h1>
                <form method = "POST" action = "/listings/<%= detail._id%>/?_method=PUT">
                    <div class="mb-3">
                        <label for="Title" class = form-label>
                            Title
                        </label>
                        <input type="text"
                        name="listing[title]"
                        value = "<%=detail.title%>" class = "form-control"/>
                    </div>
                
                    <div class="mb-3">
                        <label for="Description" class = form-label>
                            Description
                        </label>
                        <textarea type="text"
                        name="listing[description]" class = "form-control">
                        <%=detail.description%> </textarea>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class = form-label>
                        Image Link
                        </label>
                        <input type="text"
                        name = listing[image]
                        value = "<%=detail.image %>"
                        class = "form-control">
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="Price" class = form-label>
                                Price
                                </label>
                                <input type="number"
                                name="listing[price]"
                                value = "<%=detail.price%>"
                                class = "form-control"/>
                            </div>
                        </div>

                        <div class="col-md-8">          
                            <div class="mb-3">
                                <label for="Country" class = form-label>
                                Country
                                </label>
                                <input type="text"
                                name="listing[country]"
                                value = "<%=detail.country%>"
                                class = "form-control"/>
                            </div>
                        </div>
                    </div>
                  
                
                    <div class="mb-3">
                        <label for="Location" class = form-label>
                        Loaction
                        </label>
                        <input type="text"
                        name="listing[location]"
                        value = "<%=detail.location%>"
                        class = "form-control"/>
                    </div>
                    <button class = "btn btn-dark edit-btn mt-3">Edit</button> 
                </form>
            </div>
        </div>
</body>