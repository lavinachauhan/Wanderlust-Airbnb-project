<%-layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
    </div>
            <div class="card col-6 offset-3 show-card">
                    <img src="<%=detail.image.url %>" class="card-img-top show-img" alt="listing_image">
                    <div class="card-body mb-3">
                        <p class="card-text">
                           <b><%= detail.title %> </b> <br/>
                            <%= detail.description %> <br/>
                            &#8377; <%= detail.price.toLocaleString("en-IN") %> <br/>
                            <%= detail.location %> <br/>
                            <%= detail.country %> <br/>
                        </p>
                    </div>
                <div class="btns">
                    <div class="col-1 offset-2">
                        <form method = "GET" action="/listings/<%=detail._id%>/edit">
                            <button class = "btn btn-dark edit-btn">Edit</button>
                        </form>
                    </div>

                    <div class="offset-4">
                        <form method ="POST" action = "/listings/<%=detail._id%>/?_method=DELETE">
                            <button class = "btn btn-dark dlt-btn">Delete</button>
                        </form>
                    </div> 
                </div>
                  
        </div>
</body>